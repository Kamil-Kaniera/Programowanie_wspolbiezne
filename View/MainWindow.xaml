<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Billiard Table Simulation" Height="450" Width="900">
    
    <Grid>
        <!-- Lewa strona - przestrzeń do rysowania kul -->
        <Canvas Name="BilliardCanvas" Background="Green" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="450">
            <!-- Do rysowania kul i stołu -->
        </Canvas>

        <!-- Prawa strona - menu -->
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Width="380" Margin="10">
            <TextBlock Text="Liczba kul:" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <TextBox Width="100" Text="{Binding NumberOfBalls, Mode=TwoWay}" Margin="0,0,0,10"/>
            <Button Content="Start" Command="{Binding Start}" Width="100" Margin="0,0,0,10"/>
            <Button Content="Stop" Command="{Binding Stop}" Width="100" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>